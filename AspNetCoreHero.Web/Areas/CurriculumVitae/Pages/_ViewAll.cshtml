@using AspNetCoreHero.Web.Areas.CurriculumVitae.ViewModels
@inject IViewLocalizer localizer
@model IEnumerable<CurriculumVitaeViewModel>
<table class="table table-striped" id="curriculumVitaeTable">
    <thead>
        <tr>
            <th>
                @localizer["Id"]
            </th>
            <th>
                @localizer["Name"]
            </th>
            <th>
                @localizer["Created"]
            </th>
            <th>
                @localizer["IsPublished"]
            </th>
            @if (User.Claims.Any(a => a.Value == MasterPermissions.Update || a.Value == CurriculumVitaePermissions.Update || a.Value == MasterPermissions.Delete || a.Value == CurriculumVitaePermissions.Delete))
            {
                <th style="width:10%">
                    @localizer["Actions"]
                </th>
            }
        </tr>
    </thead>
    <tbody>

        @foreach (var curriculumVitae in Model)
        {
            <tr>
                <td>
                    @curriculumVitae.Id
                </td>
                <td>
                    @curriculumVitae.Name
                </td>
                <td>
                    @curriculumVitae.CreatedDisplay
                </td>
                <td>
                    @if (@curriculumVitae.IsPublished)
                    {
                        <span class="badge badge-success">@localizer["Active"]</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">@localizer["Deactivated"]</span>
                    }
                </td>
                @if (User.Claims.Any(a => 
                    a.Value == MasterPermissions.Update || 
                    a.Value == CurriculumVitaePermissions.Update || 
                    a.Value == MasterPermissions.Delete || 
                    a.Value == CurriculumVitaePermissions.Delete))
                {

                    <td >
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu shadow animated--grow-in">
                                @if (User.Claims.Any(a => a.Value == MasterPermissions.Update || a.Value == CurriculumVitaePermissions.Update))
                                {
                                    <a onclick="jQueryModalGet('/curriculumVitae?handler=CreateOrEdit&id=@curriculumVitae.Id','Edit CurriculumVitae')" class="dropdown-item"><i class="fas fa-pencil-alt"></i>  Edit</a>
                                }
                                @if (User.Claims.Any(a => a.Value == MasterPermissions.Delete || a.Value == CurriculumVitaePermissions.Delete))
                                {

                                    <form id="form_delete_@curriculumVitae.Id" asp-page="Index" method="post" asp-page-handler="Delete" asp-route-id="@curriculumVitae.Id" onsubmit="return jQueryModalDelete(this)">
                                        <a href="javascript:$('#form_delete_@curriculumVitae.Id').submit();" class="dropdown-item"><i class="fas fa-trash-alt"></i>  Delete</a>
                                    </form>
                                }
                            </div>
                        </div>
                    </td>
                }

            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#curriculumVitaeTable").DataTable();
    });
</script>